<%
    provide(:title, "Buy Antler Dog Chews")
$type = [
    ['- Type -',''],
    ['Elk','elk'],
    ['Mule','mule'],
    ['Whitetail','whitetail'],
    ['Moose','moose'],
    ['Other','other']
    ]
%>
<!-- Main -->
<article id="main">
    <header>
        <h1>Buy Antler Dog Chews</h1>
        <p>Buy all natural dog chews</p>
    </header>
    <section class="wrapper style5">
        <div class="inner">



            <%= form_for @cheworder do |f| %>
                <% if @cheworder.errors.any? %>
                      <h2 style="color:#f00">Errors:</h2>
                        <ul>
                            <% @cheworder.errors.full_messages.each do |message| %>
                            <li style="color:#f00"><%= message %></li>
                            <% end %>
                        </ul>
            <% else %>
            <h4>Contact us for antler chew pricing</h4>
            <p><img alt="Buy All Natural Antler Dog Chews" title="Buy All Natural Antler Dog Chews" class="image right" src="/assets/buy-antler-dog-chews.jpg"/></p>

            <p>Dogs love antler chews and Shed finder can fill any order of any size. We cut our own chews and any order can be customized to meet your specific needs. We offer:   </p>
            <ul>
                <li>Custom orders</li>
                <li>Cheapest prices</li>
                <li>All natural chews</li>
                <li>Variety of chews </li>
                <li>Cut to order</li>
            </ul>

            <hr />
            <% end %>
                    <div class="row uniform">
                        <div class="6u 12u$(xsmall)">
                            <%= f.text_field :name, :placeholder => "First & Last Name" %>
                        </div>
                        <div class="6u$ 12u$(xsmall)">
                            <%= f.text_field :email, :placeholder => "Email" %>
                        </div>
                        <div class="6u 12u$(xsmall)">
                            <%= f.text_field :phone, :placeholder => "Phone" %>
                        </div>
                        <div class="6u$ 12u$(xsmall)">
                            <%= f.text_field :address, :placeholder => "Ship To Address" %>
                        </div>

                        <div class="12u$ 12u$(xsmall)">
                            <div class="select-wrapper">
                                <%= f.select :antlertype, options_for_select($type, {:selected => @cheworder.antlertype}) %>
                            </div>
                        </div>

                        <div class="4u 12u$(small)">
                            <%= f.check_box :gradea %>
                            <label for="chew_order_gradea">Grade A</label>
                        </div>
                        <div class="4u 12u$(small)">
                            <%= f.check_box :gradeb %>
                            <label for="chew_order_gradeb">Grade B</label>
                        </div>
                        <div class="4u$ 12u$(small)">
                            <%= f.check_box :gradec %>
                            <label for="chew_order_gradec">Grade C</label>
                        </div>

                        <div class="12u$">
                            <%= f.text_area :message, :placeholder => "Enter detailed message (cut size, poundage...)" %>
                    </div>

                        <div class="12u$">
                        <ul class="actions">
                            <li><%= f.submit "Get Quote", :class=> 'special' %></li>
                            <% if @cheworder.new_record? %>
                            <li><input type="reset" value="Reset" /></li>
                            <% end %>
                        </ul>
                     </div>
                    </div>
            <% end %>
        </div>
    </section>
</article>
<%= render 'layouts/footer' %>
