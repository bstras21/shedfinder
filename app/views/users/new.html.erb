<!-- Main -->
					<article id="main">
						<header>
							<h1>Shed Finder Sign Up</h1>
							<p>Buy and Sell Shed Antlers Online</p>
						</header>
						<section class="wrapper style5">
							<div class="inner">


                                <%= form_for @user do |f| %>


                            <% if @user.errors.any? %>
                              <h2 style="color:#f00">Errors:</h2>
                                <ul>
                                    <% @user.errors.full_messages.each do |message| %>
                                    <li style="color:#f00"><%= message %></li>
                                    <% end %>
                                </ul>

                                <% else %>
                                <p>There is no cost for signing up, it's absolutely <span class="green">FREE</span>!</p>
                                <hr/>
                                <h3>Free Sign Up!</h3>
                            <% end %>



                                        <div class="row uniform">
                                            <div class="6u 12u$(xsmall)">
                                                <%= f.text_field :name, :placeholder => "First & Last Name" %>
                                            </div>
                                            <div class="6u$ 12u$(xsmall)">
                                                <%= f.text_field :email, :placeholder => "Email" %>
                                            </div>
                                            <div class="6u 12u$(xsmall)">
                                                <%= f.text_field :phone, :placeholder => "Phone" %>
                                            </div>
                                            <div class="3u 12u$(xsmall)">
                                                <%= f.password_field :password, :placeholder => "Password" %>
                                            </div>
                                            <div class="3u$ 12u$(xsmall)">
                                                <%= f.password_field :password_confirmation, :placeholder => "Confirmation" %>
                                            </div>

                                            <div class="4u 12u$(small)">
                                                <%= f.check_box :buyer %>
                                                <label for="user_buyer">Buyer</label>
                                            </div>
                                            <div class="4u 12u$(small)">
                                                <%= f.check_box :seller %>
                                                <label for="user_seller">Seller</label>
                                            </div>
<!--
                                            <div class="4u$ 12u$(small)">
                                                <input type="checkbox" id="signup-spam" name="signup-spam" >
                                                <label for="signup-spam">Not spam</label>
                                            </div>
-->

                                            <div class="12u$">
                                                <div class="select-wrapper">
                                                    <%= f.select :location, options_for_select($states) %>
                                                </div>
                                            </div>


                                            <div class="12u$">
                                                <ul class="actions">
                                                    <li><%= f.submit "Submit", :class=> 'special' %></li>
                                                    <li><input type="reset" value="Reset" /></li>
                                                </ul>
                                             </div>
                                    <% end %>
							</div>
						</section>
					</article>
